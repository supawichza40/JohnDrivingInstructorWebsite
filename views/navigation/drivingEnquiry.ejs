<%- layout("partials/boilerplate.ejs") %> 

<div class="container">
    <form action="" method="post">
        <div class="row">
            <div class="col-md">
                <div class="mb-3">
                    <label for="firstname" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstname" name="customerFirstname" aria-describedby="firstnameHelp" required>
                    <div id="firstnameHelp" class="form-text">We'll never share your data with anyone else.</div>
                </div>
            </div>
            <div class="col-md">
                <div class="mb-3">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="customerLastname" id="lastname" required>
                </div>
    
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" name="customerEmail" id="email" aria-describedby="emailHelp" required>
        </div>

        <div class="row">
            <div class="col-md">
                <div class="mb-3">
                    <label for="number" class="form-label">Telephone Number</label>
                    <input type="tel" class="form-control" name="customerNumber" id="number" aria-describedby="numberHelp" placeholder="07377515600" required>
                </div>
            </div>
            <div class="col-md">
                <div class="mb-3">
                    <label for="postcode" class="form-label">Postcode</label>
                    <input type="text" class="form-control" name="customerPostcode" id="postcode" required>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="" class="mb-3">Do you want to learn Manual or Automatic?</label>
            <br>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gearType" id="manual" value="manual" required>
                <label class="form-check-label" for="manual">Manual</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gearType" id="automatic" value="automatic">
                <label class="form-check-label" for="automatic">Automatic</label>
            </div>
        
        </div>
        <div class="row">
            <div class="col-md">
                <div class="mb-3">
                    <label for="number" class="form-label">How long you been driving?</label>
                    <input type="input" class="form-control" id="driveTime" required>
                </div>
            </div>
            <div class="col-md">
                
            </div>
        </div>
        <div class="form-group">
            <label for="additionalInfo">Additional information</label>
            <textarea class="form-control" id="additionalInfo" rows="3" name="additionalInfo"></textarea>
            <div id="" class="form-text">Additional information that you would like to tell your instructor</div>
        </div>

        

    
        <button type="submit" class="btn btn-primary my-2">Submit</button>
    </form>
</div>